# Application Settings
APP_NAME="Currency Converter Service"
VERSION="0.1.0"
DEBUG=true
ENVIRONMENT="development"

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/currency_converter"
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL=300  # 5 minutes in seconds

# API Provider Settings
# Fixer.io
FIXER_API_KEY="your_fixer_api_key_here"
FIXER_BASE_URL="http://data.fixer.io/api"

# OpenExchangeRates
OPENEXCHANGE_APP_ID="your_openexchange_app_id_here"
OPENEXCHANGE_BASE_URL="https://openexchangerates.org/api"

# CurrencyAPI
CURRENCYAPI_KEY="your_currencyapi_key_here"
CURRENCYAPI_BASE_URL="https://api.currencyapi.com/v3"

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60  # seconds
CIRCUIT_BREAKER_EXPECTED_EXCEPTION="httpx.RequestError"

# API Timeout Configuration
API_TIMEOUT=3.0  # seconds
PRIMARY_API_TIMEOUT=2.0  # seconds for primary API
SECONDARY_API_TIMEOUT=1.5  # seconds for secondary APIs

WORKER_BASE_CURRENCIES=USD,EUR,GBP
WORKER_TARGET_CURRENCIES=USD,EUR,GBP,JPY,AUD,CAD,CHF,CNY,SEK,NZD,NGN
WORKER_UPDATE_INTERVAL=3600

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="json"  # json or standard

# Rate Limiting (if needed in future)
RATE_LIMIT_PER_MINUTE=100

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=1.0